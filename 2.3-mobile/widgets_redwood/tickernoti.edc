               }
               rel2 {
                  relative: 1.0 0.0;
                  to: "bg_bottom";
               }
            }
         }
         // Icon
         part {
            name: "icon";
            type: SWALLOW;
            scale: 1;
            mouse_events: 1;
            clip_to: "base";
            description {
               state: "default" 0.0;
               fixed: 1 1;
               min: TICKERNOTI_DEFAULT_ICON_MIN_INC;
               max: TICKERNOTI_DEFAULT_ICON_MIN_INC;
               align: 0.0 0.5;
               rel1 {
                  relative: 1.0 1.0;
                  to: "padding_left_top";
               }
               rel2 {
                  relative: 1.0 0.0;
                  to_x: "padding_left_top";
                  to_y: "bg_bottom";
               }
               aspect: 1.0 1.0;
               aspect_preference: VERTICAL;
