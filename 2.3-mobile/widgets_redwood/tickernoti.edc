         part {
            name: "button";
            type: SWALLOW;
            scale: 1;
            mouse_events: 1;
            description { state: "default" 0.0;
               min: TICKERNOTI_DEFAULT_BUTTON_MIN_INC;
               max: TICKERNOTI_DEFAULT_BUTTON_MAX_INC;
               fixed: 1 1;
               align: 1.0 0.5;
               rel1 {
                  relative: 0.0 0.0;
                  to_x: "padding_right_bottom";
                  to_y: "bg";
               }
               rel2 {
                  relative: 0.0 0.0;
                  to_x: "padding_right_bottom";
                  to_y: "bg_bottom";
               }
            }
         }
         part {
            name: "padding_button_left";
            type: RECT;
            scale: 1;
            mouse_events: 0;
            description {
               state: "default" 0.0;
               visible: 0;
               min: TICKERNOTI_DEFAULT_PADDING_BEFORE_BUTTON_INC;
               fixed: 1 0;
               align: 0.0 0.0;
               rel1 {
                  relative: 0.0 0.0;
                  to: "button";
               }
               rel2 {
                  relative: 0.0 1.0;
                  to: "button";
               }
            }
         }
      }
      programs {
         program {
            name: "effect_show";
