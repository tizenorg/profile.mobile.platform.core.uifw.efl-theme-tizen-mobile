          if (pos >= 0.0 && pos < 0.1)
            set_state(PART:"shadow_right", "show_effect", 0.10);
          else if (pos >= 0.1 && pos < 0.2)
            set_state(PART:"shadow_right", "show_effect", 0.11);
          else if (pos >= 0.2 && pos < 0.3)
            set_state(PART:"shadow_right", "show_effect", 0.12);
          else if (pos >= 0.3 && pos < 0.4)
            set_state(PART:"shadow_right", "show_effect", 0.13);
          else if (pos >= 0.4 && pos < 0.5)
            set_state(PART:"shadow_right", "show_effect", 0.14);
          else if (pos >= 0.5 && pos < 0.6)
            set_state(PART:"shadow_right", "show_effect", 0.15);
          else if (pos >= 0.6 && pos < 0.7)
            set_state(PART:"shadow_right", "show_effect", 0.16);
          else if (pos >= 0.7 && pos < 0.8)
            set_state(PART:"shadow_right", "show_effect", 0.17);
          else if (pos >= 0.8 && pos < 0.9)
            set_state(PART:"shadow_right", "show_effect", 0.18);
          else if (pos >= 0.9 && pos <= 1.0)
          {
            set_state(PART:"shadow_right", "hidden", 0.0);
            set_int(effect_right, 0);
            set_int(anim2_right, 0);
          }
      }
