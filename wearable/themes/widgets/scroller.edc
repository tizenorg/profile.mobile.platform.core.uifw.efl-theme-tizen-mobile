#define OVERSCROLL_EFFECT_FUNCTION_TOP(NAME, SRC)\
      program { name: "content_move_"NAME;\
         signal: "elm,action,scroll";\
         source: "elm";\
         script {\
            new st[31];\
            new Float:state;\
            new id;\
            get_state(PART:SRC, st, 30, state);\
            if (!strcmp(st, "show_effect"))\
              {\
                set_int(effect_top, 0);\
                set_state(PART:SRC, "hidden", 0.0);\
                id = get_int(anim1_top);\
                cancel_anim(id);\
                set_int(anim1_top, 0);\
                id = get_int(anim2_top);\
                cancel_anim(id);\
                set_int(anim2_top, 0);\
              }\
         }\
      }\
      program { name: "edge_"NAME;\
         signal: "elm,edge,"NAME;\
         source: "elm";\
         script {\
             if (!get_int(effect_top)) {\
                 set_int(effect_top, 1);\
                 if (get_int(mouse_down))\
                   set_int(effect_hold, 1);\
                 if (!get_int(anim1_top) && !get_int(anim2_top))\
                   set_int(anim1_top, anim(0.33, "effect_anim_top", 1));\
             }\
         }\
      }\
      program { name: "content_unpress_"NAME;\
         signal: "elm,state,mouse,up";\
         source: "elm";\
         script {\
            set_int(mouse_down, 0);\
            set_int(effect_hold, 0);\
            if (!get_int(anim1_top) && !get_int(anim2_top) && get_int(effect_top))\
              set_int(anim2_top, anim(0.33, "effect_anim2_top", 1));\
         }\
      }
